{
  "displayName": "Button",
  "icon": "./icon.png",
  "defaultWidth": 160,
  "defaultHeight": 36,
  "component": "./TextButton.js",
  "props": [
    {
      "name": "type",
      "displayName": "Type",
      "type": "text",
      "default": "contained",
      "control": {
        "type": "menu",
        "options": [
          { "label": "Text Button", "value": "text" },
          { "label": "Outlined Button", "value": "outlined" },
          { "label": "Contained Button", "value": "contained" }
        ]
      }
    },
    {
      "name": "text",
      "displayName": "Text",
      "type": "text",
      "default": "Button"
    },
    {
      "name": "icon",
      "displayName": "Icon",
      "type": "icon",
      "default": "add"
    },
    {
      "name": "action",
      "type": "action",
      "displayName": "On Press"
    },
    {
      "name": "primaryColor",
      "displayName": "Primary Color",
      "type": "color",
      "default": "@primary"
    },
    {
      "name": "contrastColor",
      "displayName": "Text Color",
      "type": "color",
      "default": "@contrast:primaryColor",
      "enabled": { "type": "contained" }
    },
    {
      "name": "upperCase",
      "displayName": "Uppercase",
      "type": "boolean",
      "default": true
    },
    {
      "name": "borderRadius",
      "displayName": "Rouding",
      "type": "borderRadius",
      "enabled": { "type": ["contained", "outlined"] }
    }
  ]
}

