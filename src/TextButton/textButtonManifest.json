{
  "displayName": "Button",
  "icon": "./icon.png",
  "defaultWidth": 160,
  "defaultHeight": 36,
  "component": "./TextButton.js",
  "props": [
    {
      "name": "type",
      "displayName": "Type",
      "type": "text",
      "default": "contained",
      "control": {
        "type": "menu",
        "options": [
          { "label": "Text Button", "value": "text" },
          { "label": "Outlined Button", "value": "outlined" },
          { "label": "Contained Button", "value": "contained" }
        ]
      }
    },
    {
      "name": "text",
      "displayName": "Text",
      "type": "text",
      "default": "Button"
    },
    {
      "name": "icon",
      "displayName": "Icon",
      "type": "icon",
      "default": "add"
    },
    {
      "name": "action",
      "type": "action",
      "displayName": "On Press"
    },
    {
      "name": "secondaryColor",
      "displayName": "Secondary Color",
      "type": "color",
      "default": "@secondary"
    },
    {
      "name": "contrastColor",
      "displayName": "Text Color",
      "type": "color",
      "default": "@contrast:secondaryColor",
      "enabled": { "type": "contained" }
    },
    {
      "name": "upperCase",
      "displayName": "Uppercase",
      "type": "boolean",
      "default": true
    }
  ]
}

