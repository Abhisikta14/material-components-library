{
  "displayName": "Card List",
  "icon": "./icon.png",
  "defaultWidth": 375,
  "defaultHeight": 528,
  "props": [
    {
      "name": "items",
      "displayName": "What is this a list of?",
      "type": "list"
    },
    {
      "name": "titleText",
      "displayName": "Title",
      "type": "text",
      "role": "listItem",
      "reference": "items",
      "default": "Title Text"
    },
    {
      "name": "subtitleText",
      "displayName": "Subtitle",
      "type": "text",
      "role": "listItem",
      "reference": "items",
      "default": "Subtitle Text"
    },
    {
      "name": "layout",
      "type": "text",
      "default": "mediaTop",
      "control": {
        "type": "menu",
        "options": [
          { "label": "Image Top", "value": "mediaTop" },
          { "label": "Image Middle", "value": "mediaMiddle" },
          { "label": "Image Right", "value": "mediaRight" }
        ]
      }
    },
    {
      "name": "columnCount",
      "displayName": "Columns",
      "type": "number",
      "default": 2,
      "enabled": {
        "layout": ["mediaTop", "mediaMiddle"]
      },
      "control": {
        "type": "menu",
        "options": [
          { "label": "1", "value": 1 },
          { "label": "2", "value": 2 }
        ]
      }
    },
    {
      "name": "onPress",
      "displayName": "On Press",
      "type": "action",
      "role": "listItem",
      "reference": "items"
    }
  ],
  "childComponents": [
    {
      "name": "body",
      "displayName": "Body",
      "role": "listItem",
      "reference": "items",
      "props": [
        {
          "name": "text",
          "displayName": "Text",
          "type": "text",
          "default": "Body text lorem ipsum doler"
        },
        {
          "name": "enabled",
          "type": "boolean",
          "default": "true"
        }
      ]
    },
    {
      "name": "media",
      "displayName": "Media",
      "role": "listItem",
      "reference": "items",
      "props": [
        {
          "name": "image",
          "displayName": "Image",
          "type": "image"
        },
        {
          "name": "enabled",
          "type": "boolean",
          "default": "true"
        }
      ]
    },
    {
      "name": "actions",
      "displayName": "Buttons",
      "role": "listItem",
      "reference": "items",
      "props": [
        {
          "name": "enabled",
          "type": "boolean",
          "default": false
        },
        {
          "name": "firstButtonText",
          "displayName": "First Button Text",
          "type": "text",
          "default": "Button 1"
        },
        {
          "name": "firstButtonAction",
          "displayName": "First Button Action",
          "type": "action"
        },
        {
          "name": "secondButtonText",
          "displayName": "Second Button Text",
          "type": "text",
          "default": "Button 2"
        },
        {
          "name": "secondButtonAction",
          "displayName": "Second Button Action",
          "type": "action"
        },
        {
          "name": "color",
          "displayName": "Button Color",
          "type": "color",
          "default": "#6200ee"
        }
      ]
    }
  ]
}
