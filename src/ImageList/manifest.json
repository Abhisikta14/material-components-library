{
  "displayName": "Image List",
  "icon": "./icon.png",
  "defaultWidth": 375,
  "defaultHeight": 375,
  "props": [
    {
      "name": "items",
      "displayName": "What is this a list of?",
      "type": "list"
    },
    {
      "name": "image",
      "displayName": "Image",
      "role": "listItem",
      "reference": "items",
      "type": "image"
    },
    {
      "name": "columnCount",
      "displayName": "Columns",
      "type": "number",
      "default": 2,
      "control": {
        "type": "menu",
        "options": [
          { "label": "2", "value": 2 },
          { "label": "3", "value": 3 },
          { "label": "4", "value": 4 }
        ]
      }
    },
    {
      "name": "onPress",
      "displayName": "Click Actions",
      "type": "action",
      "role": "listItem",
      "reference": "items"
    }
  ],
  "childComponents": [
    {
      "name": "listHeader",
      "displayName": "List Header",
      "props": [
        { "name": "enabled", "type": "boolean", "default": false },
        {
          "name": "header",
          "displayName": "Title",
          "type": "text",
          "default": "Title",
          "styles": {
            "fontFamily": "@heading",
            "fontWeight": "600",
            "color": "@text",
            "fontSize": "18"
          }
        }
      ]
    },
    {
      "name": "title",
      "displayName": "Text",
      "role": "listItem",
      "reference": "items",
      "props": [
        {
          "name": "enabled",
          "type": "boolean",
          "default": "false"
        },
        {
          "name": "text",
          "displayName": "Title",
          "type": "text",
          "default": "Title",
          "styles": {
            "fontFamily": "@body",
            "color": "#FFFFFF",
            "fontWeight": "600",
            "fontSize": "12"
          }
        },
        {
          "name": "subtitle",
          "displayName": "Subtitle",
          "type": "text",
          "default": "Subtitle",
          "styles": {
            "fontFamily": "@body",
            "color": "#FFFFFF",
            "fontWeight": "normal",
            "fontSize": "10"
          }
        },
        {
          "name": "subtitlePosition",
          "displayName": "Subtitle Position",
          "type": "text",
          "default": "below",
          "control": {
            "type": "menu",
            "options": [
              { "label": "Below Title", "value": "below" },
              { "label": "Above Title", "value": "above" }
            ]
          }
        },
        {
          "name": "textPosition",
          "displayName": "Text Position",
          "type": "text",
          "default": "bottom",
          "control": {
            "type": "menu",
            "options": [
              { "label": "Top Overlay", "value": "top" },
              { "label": "Bottom Overlay", "value": "bottom" }
            ]
          }
        },
        {
          "name": "backgroundEffect",
          "displayName": "Background Effect",
          "type": "text",
          "default": "gradient",
          "control": {
            "type": "menu",
            "options": [
              { "label": "Gradient", "value": "gradient" },
              { "label": "Solid Color", "value": "solid" }
            ]
          }
        },
        {
          "name": "backgroundColor",
          "displayName": "Overlay Background Color",
          "type": "color",
          "default": "rgba(0, 0, 0, 0.6)",
          "enabled": {
            "backgroundEffect": "solid"
          }
        }
      ]
    },
    {
      "name": "imageStyles",
      "displayName": "Image Style",
      "role": "listItem",
      "reference": "items",
      "props": [
        {
          "name": "shape",
          "displayName": "Shape",
          "type": "text",
          "default": "square",
          "control": {
            "type": "menu",
            "options": [
              { "label": "Square", "value": "square" },
              { "label": "Portrait", "value": "portrait" },
              { "label": "Landscape", "value": "landscape" }
            ]
          }
        },
        {
          "name": "rounding",
          "displayName": "Rounding",
          "type": "number",
          "default": 6,
          "control": { "type": "slider", "max": 30, "min": 0 }
        },
        {
          "name": "shadow",
          "displayName": "Shadow",
          "type": "boolean",
          "default": false
        }
      ]
    },
    {
      "name": "iconButton",
      "displayName": "Icon",
      "role": "listItem",
      "reference": "items",
      "props": [
        {
          "name": "iconType",
          "displayName": "Icon Type",
          "type": "text",
          "default": "icon",
          "control": {
            "type": "menu",
            "options": [
              { "label": "Icon", "value": "icon" },
              { "label": "Toggle", "value": "toggle" }
            ]
          }
        },
        {
          "name": "icon",
          "displayName": "Icon",
          "type": "icon",
          "default": "more-vert",
          "enabled": {
            "iconType": ["toggle", "ADALO_INTERNAL_!previous"]
          }
        },
        {
          "name": "position",
          "displayName": "Position",
          "type": "text",
          "default": "top",
          "control": {
            "type": "menu",
            "options": [
              { "label": "Top", "value": "top" },
              { "label": "Bottom", "value": "bottom" }
            ]
          }
        },
        {
          "name": "color",
          "displayName": "Color",
          "type": "color",
          "default": "#fff",
          "enabled": {
            "iconType": ["toggle", "ADALO_INTERNAL_!previous"]
          }
        },
        {
          "name": "onPress",
          "displayName": "Click Actions",
          "type": "action",
          "enabled": {
            "iconType": ["toggle", "ADALO_INTERNAL_!previous"]
          }
        },
        {
          "name": "input",
          "displayName": "What does this toggle?",
          "type": "boolean",
          "role": "autosaveInput",
          "enabled": {
            "iconType": "toggle"
          }
        },
        {
          "name": "activeIcon",
          "displayName": "Active Icon",
          "type": "icon",
          "default": "check-box",
          "enabled": {
            "iconType": "toggle"
          }
        },
        {
          "name": "activeColor",
          "displayName": "Active Color",
          "type": "color",
          "default": "@primary",
          "enabled": {
            "iconType": "toggle"
          }
        },
        {
          "name": "inactiveIcon",
          "displayName": "Inactive Icon",
          "type": "icon",
          "default": "check-box-outline-blank",
          "enabled": {
            "iconType": "toggle"
          }
        },
        {
          "name": "inactiveColor",
          "displayName": "Inactive Color",
          "type": "color",
          "default": "#bbb",
          "enabled": {
            "iconType": "toggle"
          }
        },
        {
          "name": "activeActions",
          "displayName": "Additional actions only when toggle is turned ON",
          "type": "action",
          "enabled": {
            "iconType": "toggle"
          }
        },
        {
          "name": "inactiveActions",
          "displayName": "Additional actions only when toggle is turned OFF",
          "type": "action",
          "enabled": {
            "iconType": "toggle"
          }
        },
        {
          "name": "enabled",
          "type": "boolean",
          "default": "false"
        }
      ]
    },
    {
      "name": "searchBar",
      "displayName": "List Search",
      "props": [
        { "name": "enabled", "type": "boolean", "default": false },
        {
          "name": "placeholderText",
          "displayName": "Placeholder Text",
          "type": "text",
          "default": "Search...",
          "styles": {
            "fontFamily": "@heading",
            "fontWeight": "600",
            "color": "@text",
            "fontSize": "18"
          }
        },
        {
          "name": "notFoundText",
          "displayName": "No Search Results Message",
          "type": "text",
          "default": "No Results",
          "styles": {
            "fontFamily": "@heading",
            "fontWeight": "600",
            "color": "@text",
            "fontSize": "18"
          }
        },
        {
          "name": "searchInputStyles",
          "displayName": "Search Input Styles",
          "type": "boolean",
          "default": false,
          "control": {
            "type": "menu",
            "options": [
              { "label": "Preset", "value": false },
              { "label": "Custom", "value": true }
            ]
          }
        },
        {
          "name": "icon",
          "displayName": "Icon",
          "type": "icon",
          "default": "search",
          "enabled": {
            "searchInputStyles": true
          }
        },
        {
          "name": "iconColor",
          "displayName": "Icon Color",
          "type": "color",
          "default": "@secondary",
          "enabled": {
            "searchInputStyles": true
          }
        },
        {
          "name": "backgroundColor",
          "displayName": "Background Color",
          "type": "color",
          "default": "#FFFFFF",
          "enabled": {
            "searchInputStyles": true
          }
        },
        {
          "name": "borderColor",
          "displayName": "Border Color",
          "type": "color",
          "default": "#E0E0E0",
          "enabled": {
            "searchInputStyles": true
          }
        },
        {
          "name": "borderSize",
          "displayName": "Border Size",
          "type": "number",
          "default": 1,
          "control": { "type": "slider", "max": 18, "min": 0 },
          "enabled": {
            "searchInputStyles": true
          }
        },
        {
          "name": "rounding",
          "displayName": "Rounding",
          "type": "number",
          "default": 4,
          "control": { "type": "slider", "max": 18, "min": 0 },
          "enabled": {
            "searchInputStyles": true
          }
        }
      ]
    }
  ]
}
