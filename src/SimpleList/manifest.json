{
  "displayName": "Simple List",
  "icon": "./icon.png",
  "defaultWidth": 600,
  "defaultHeight": 232,
  "props": [
    {
      "name": "items",
      "displayName": "What is this a list of?",
      "type": "list"
    },
    {
      "name": "dividerType",
      "displayName": "Divider",
      "type": "text",
      "default": "inset",
      "control": {
        "type": "menu",
        "options": [
          { "label": "None", "value": "none" },
          { "label": "Inset", "value": "inset" },
          { "label": "Full", "value": "full" }
        ]
      }
    },
    {
      "name": "dividerColor",
      "displayName": "Divider Color",
      "type": "color",
      "default": "#e0e0e0"
    },
    {
      "name": "onPress",
      "displayName": "Click Actions",
      "type": "action",
      "role": "listItem",
      "reference": "items"
    }
  ],
  "childComponents": [
    {
      "name": "firstLine",
      "displayName": "Title",
      "role": "listItem",
      "reference": "items",
      "props": [
        {
          "name": "text",
          "displayName": "Text",
          "type": "text",
          "default": "Title",
          "styles": {
            "fontFamily": "@body",
            "color": "#212121",
            "fontWeight": "normal"
          }
        },
        {
          "name": "titleLineNum",
          "displayName": "Title Max Number of Lines",
          "type": "number",
          "default": 1,
          "control": {
            "type": "menu",
            "options": [
              { "label": "One Line", "value": 1 },
              { "label": "Two Lines", "value": 2 },
              { "label": "No Max", "value": 3 }
            ]
          }
        }
      ]
    },
    {
      "name": "secondLine",
      "displayName": "Subtitle",
      "role": "listItem",
      "reference": "items",
      "props": [
        {
          "name": "enabled",
          "type": "boolean",
          "default": true
        },
        {
          "name": "text",
          "displayName": "Text",
          "type": "text",
          "default": "Subtitle",
          "styles": {
            "fontFamily": "@body",
            "color": "#757575",
            "fontWeight": "normal"
          }
        },
        {
          "name": "subtitleLineNum",
          "displayName": "Subtitle Max Number of Lines",
          "type": "number",
          "default": 1,
          "control": {
            "type": "menu",
            "options": [
              { "label": "One Line", "value": 1 },
              { "label": "Two Lines", "value": 2 },
              { "label": "No Max", "value": 3 }
            ]
          }
        }
      ]
    },
    {
      "name": "leftSection",
      "displayName": "Left Section",
      "role": "listItem",
      "reference": "items",
      "props": [
        {
          "name": "enabled",
          "type": "boolean",
          "default": true
        },
        {
          "name": "type",
          "displayName": "Type",
          "type": "text",
          "default": "avatar",
          "control": {
            "type": "menu",
            "options": [
              { "label": "Icon", "value": "icon" },
              { "label": "Avatar", "value": "avatar" },
              { "label": "Image", "value": "image" }
            ]
          }
        },
        {
          "name": "icon",
          "displayName": "Icon",
          "type": "icon",
          "default": "add",
          "enabled": { "type": "icon" }
        },
        {
          "name": "iconColor",
          "displayName": "Icon Color",
          "type": "color",
          "default": "#ccc",
          "enabled": { "type": "icon" }
        },
        {
          "name": "image",
          "displayName": "Image",
          "type": "image",
          "enabled": { "type": ["image", "avatar"] }
        }
      ]
    },
    {
      "name": "rightSection",
      "displayName": "Right Section",
      "role": "listItem",
      "reference": "items",
      "props": [
        {
          "name": "enabled",
          "type": "boolean",
          "default": false
        },
        {
          "name": "iconType",
          "displayName": "Icon Type",
          "type": "text",
          "default": "icon",
          "control": {
            "type": "menu",
            "options": [
              { "label": "Icon", "value": "icon" },
              { "label": "Toggle", "value": "toggle" }
            ]
          }
        },
        {
          "name": "icon",
          "displayName": "Icon",
          "type": "icon",
          "default": "add",
          "enabled": {
            "iconType": ["toggle", "ADALO_INTERNAL_!previous"]
          }
        },
        {
          "name": "iconColor",
          "displayName": "Icon Color",
          "type": "color",
          "default": "#ccc",
          "enabled": {
            "iconType": ["toggle", "ADALO_INTERNAL_!previous"]
          }
        },
        {
          "name": "onPress",
          "displayName": "Click Actions",
          "type": "action",
          "role": "listItem",
          "reference": "items",
          "enabled": {
            "iconType": ["toggle", "ADALO_INTERNAL_!previous"]
          }
        },
        {
          "name": "input",
          "displayName": "What does this toggle?",
          "type": "boolean",
          "role": "autosaveInput",
          "enabled": {
            "iconType": "toggle"
          }
        },
        {
          "name": "activeIcon",
          "displayName": "Active Icon",
          "type": "icon",
          "default": "check-box",
          "enabled": {
            "iconType": "toggle"
          }
        },
        {
          "name": "activeColor",
          "displayName": "Active Color",
          "type": "color",
          "default": "@primary",
          "enabled": {
            "iconType": "toggle"
          }
        },
        {
          "name": "inactiveIcon",
          "displayName": "Inactive Icon",
          "type": "icon",
          "default": "check-box-outline-blank",
          "enabled": {
            "iconType": "toggle"
          }
        },
        {
          "name": "inactiveColor",
          "displayName": "Inactive Color",
          "type": "color",
          "default": "#bbb",
          "enabled": {
            "iconType": "toggle"
          }
        },
        {
          "name": "activeActions",
          "displayName": "Additional actions only when toggle is turned ON",
          "type": "action",
          "enabled": {
            "iconType": "toggle"
          }
        },
        {
          "name": "inactiveActions",
          "displayName": "Additional actions only when toggle is turned OFF",
          "type": "action",
          "enabled": {
            "iconType": "toggle"
          }
        }
      ]
    },
    {
      "name": "background",
      "displayName": "Background",
      "props": [
        { "name": "enabled", "type": "boolean", "default": false },
        {
          "name": "backgroundColor",
          "displayName": "Background Color",
          "type": "color",
          "default": "#FFFFFF"
        },
        {
          "name": "border",
          "displayName": "Border",
          "type": "boolean",
          "default": true
        },
        {
          "name": "borderColor",
          "displayName": "Border Color",
          "type": "color",
          "default": "#e0e0e0",
          "enabled": {
            "border": true
          }
        },
        {
          "name": "borderSize",
          "displayName": "Border Size",
          "type": "number",
          "default": 1,
          "control": { "type": "slider", "max": 3, "min": 1 },
          "enabled": {
            "border": true
          }
        },
        {
          "name": "rounding",
          "displayName": "Rounding",
          "type": "number",
          "default": 4,
          "control": { "type": "slider", "max": 60, "min": 0 }
        },
        {
          "name": "shadow",
          "displayName": "Shadow",
          "type": "boolean",
          "default": true
        }
      ]
    },
    {
      "name": "listHeader",
      "displayName": "List Header",
      "props": [
        { "name": "enabled", "type": "boolean", "default": false },
        {
          "name": "header",
          "displayName": "Title",
          "type": "text",
          "default": "Title",
          "styles": {
            "fontFamily": "@heading",
            "fontWeight": "600",
            "color": "@text",
            "fontSize": "16"
          }
        }
      ]
    },
    {
      "name": "searchBar",
      "displayName": "List Search",
      "props": [
        { "name": "enabled", "type": "boolean", "default": false },
        {
          "name": "placeholderText",
          "displayName": "Placeholder Text",
          "type": "text",
          "default": "Search...",
          "styles": {
            "fontFamily": "@heading",
            "fontWeight": "600",
            "color": "@text",
            "fontSize": "18"
          }
        },
        {
          "name": "notFoundText",
          "displayName": "No Search Results Message",
          "type": "text",
          "default": "No Results",
          "styles": {
            "fontFamily": "@heading",
            "fontWeight": "600",
            "color": "@text",
            "fontSize": "18"
          }
        },
        {
          "name": "searchInputStyles",
          "displayName": "Search Input Styles",
          "type": "boolean",
          "default": false,
          "control": {
            "type": "menu",
            "options": [
              { "label": "Preset", "value": false },
              { "label": "Custom", "value": true }
            ]
          }
        },
        {
          "name": "icon",
          "displayName": "Icon",
          "type": "icon",
          "default": "search",
          "enabled": {
            "searchInputStyles": true
          }
        },
        {
          "name": "iconColor",
          "displayName": "Icon Color",
          "type": "color",
          "default": "@secondary",
          "enabled": {
            "searchInputStyles": true
          }
        },
        {
          "name": "backgroundColor",
          "displayName": "Background Color",
          "type": "color",
          "default": "#FFFFFF",
          "enabled": {
            "searchInputStyles": true
          }
        },
        {
          "name": "borderColor",
          "displayName": "Border Color",
          "type": "color",
          "default": "#E0E0E0",
          "enabled": {
            "searchInputStyles": true
          }
        },
        {
          "name": "borderSize",
          "displayName": "Border Size",
          "type": "number",
          "default": 1,
          "control": { "type": "slider", "max": 18, "min": 0 },
          "enabled": {
            "searchInputStyles": true
          }
        },
        {
          "name": "rounding",
          "displayName": "Rounding",
          "type": "number",
          "default": 4,
          "control": { "type": "slider", "max": 18, "min": 0 },
          "enabled": {
            "searchInputStyles": true
          }
        }
      ]
    }
  ]
}
